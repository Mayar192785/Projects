@model FinanceCore.DBModels.tblGE_SubSystems
@*@using  FinanceCore.Globalization;*@
@using Global.Globalization;
@using Global.DBModels;
@using Global.Models;
@using FinanceCore.DBModels;
@using WTEG.SqlLocalizer.DbStringLocalizer;
@using Microsoft.Extensions.Localization;
@using Microsoft.AspNetCore.Mvc.Localization
@using Global.Services;

@inject IViewLocalizer Localizer

@{
    ViewBag.Title = "GE_SubSystems ..Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .btn {
        background-color: #094766;
        color: #fff;
        font-family: 'Times New Roman', Times, serif;
        font-size: 1rem
    }
    #nav-tab .nav-link{
        border-color: #094766;
        color: black;
        font-family: 'Times New Roman', Times, serif;
        font-size: 1rem;
    }
</style>

<div class="row mx-5 my-auto">
    <!-- /Start Tabs -->
    <div class="col-md-12">
        <nav>
            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                <button class="nav-link shadow shadow-bottom-0" id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#details" type="button" role="tab" aria-controls="nav-home" aria-selected="true">@Localizer["BasicDetails"]</button>
            </div>
        </nav>
        <div class="tab-content mx-auto my-auto py-auto">
            <div class="active tab-pane" id="details">
                <div class="box shadow mb-4">
                    <div class="form box-body py-3 px-3">
                        <div class="row justify-content-between d-flex">
                            <div ID="dvID" class="col-sm-6">
                                <div class="form-group has-feedback ">
                                    <label asp-for="ID" class="control-label ">@Localizer["ID"]</label>
                                    <input asp-for="ID" asp-format="{0:N0}" class="form-control w-50" disabled="disabled" />
                                </div>
                            </div>
                            <div ID="dvSubSystemName" class="col-sm-6">
                                <div class="form-group has-feedback ">
                                    <label asp-for="SubSystemName" class="control-label ">@Localizer["SubSystemName"]</label>
                                    <input asp-for="SubSystemName" class="form-control w-50" disabled="disabled" />
                                </div>
                            </div>
                        </div>
                        <div class="row justify-content-between d-flex">
                            <div ID="dvSubSystemArabicName" class="col-sm-6">
                                <div class="form-group has-feedback ">
                                    <label asp-for="SubSystemArabicName" class="control-label ">@Localizer["SubSystemArabicName"]</label>
                                    <input asp-for="SubSystemArabicName" class="form-control w-50" disabled="disabled" />
                                </div>
                            </div>
                            <div ID="dvSubSystemShortName" class="col-sm-6">
                                <div class="form-group has-feedback ">
                                    <label asp-for="SubSystemShortName" class="control-label ">@Localizer["SubSystemShortName"]</label>
                                    <input asp-for="SubSystemShortName" class="form-control w-50 " disabled="disabled" />
                                </div>
                            </div>
                        </div>
                        <div class="row justify-content-between d-flex">
                            <div ID="dvIsActive" class="col-sm-6">
                                <div class="form-group has-feedback ">
                                    <label asp-for="IsActive" class="control-label ">@Localizer["IsActive"]</label>
                                    <input asp-for="IsActive" type="checkbox" />
                                    <span asp-validation-for="IsActive" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12 btns my-3">
                            <a asp-controller="GE_SubSystems"
                               class="btn mb-3" asp-action="Edit" asp-route-id="@Model.ID">@Localizer["UpdateBtn"]<i class="far fa-save mx-1"></i></a>
                            <a asp-controller="GE_SubSystems" class="btn mb-3" asp-action="Index">@Localizer["BackBtn"] <i class="fas fa-angle-double-left mx-1"></i></a>
                            <a asp-controller="GE_SubSystems" class="btn mb-3" asp-action="PrintFormReport"
                               asp-route-id="@Model.ID" asp-route-formAction="Details" data-modal='' id="btnPrintForm">@Localizer["PrintBtn"]<i class="fas fa-print mx-1"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- modal placeholder-->
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>
@section scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
 }
