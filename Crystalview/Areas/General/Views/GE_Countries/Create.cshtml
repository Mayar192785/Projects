<div class="container bg-white mx-auto my-auto">
    <div class="row mx-5 my-auto">
        <!-- /Start Tabs -->
        <div class="col-md-12">
    @*         <nav>
                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                    <button class="nav-link shadow shadow-bottom-0 active" id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#details" type="button" role="tab" aria-controls="nav-home" aria-selected="true">@Localizer["BasicDetails"]</button>
                </div>
            </nav> *@
            <div class="tab-content mx-auto my-auto py-auto">

                <div class="active tab-pane" id="details">
                    <!-- /End Tabs -->
                    <form asp-controller="GE_Countries"
                          asp-action="Create"
                          asp-route-returnurl="@ViewBag.ReturnUrl"
                          asp-anti-forgery="false"
                          id="FullForm"
                          method="post">
                        <div class="box bg-white mb-4">
                            <div class="form box-body py-3 px-3">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="row justify-content-between d-flex">
                                    <div ID="dvCountryCode" class="col-sm-6">
                                        <div class="form-group has-feedback">
                                            <label asp-for="CountryCode" class="control-label "></label>
                                            <input asp-for="CountryCode" asp-format="{0:N0}" class="form-control required w-50" value="1" type="text" min="0" step="1" autocomplete="off" disabled="disabled"/>
                                            <span asp-validation-for="CountryCode" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div ID="dvCountryNameA" class="col-sm-6">
                                        <div class="form-group has-feedback required">
                                            <label asp-for="CountryNameA" class="control-label "></label>
                                            <input asp-for="CountryNameA" class="form-control required w-50" />
                                            <span asp-validation-for="CountryNameA" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row justify-content-between d-flex">
                                    <div ID="dvCountryNameE" class="col-sm-6">
                                        <div class="form-group has-feedback required">
                                            <label asp-for="CountryNameE" class="control-label "></label>
                                            <input asp-for="CountryNameE" class="form-control required w-50" />
                                            <span asp-validation-for="CountryNameE" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row mx-5 my-auto">
        <!-- /Start Tabs -->
        <div class="col-md-12">
            <nav>
                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                    <button class="nav-link active" id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#GE_Citieshome" type="button" role="tab" aria-controls="nav-home" aria-selected="true">@Localizer["GE_CitiesTabTitle"]</button>
                </div>
            </nav>
            <div id="GE_Citieshome" class="tab-pane fade-in">
                <partial name="_GE_CitiesPartial" for="GE_CitiesDetails" />
            </div>
        </div>
    </div>
    <div class=" form-group col-sm-12 btns pt-2 py-3 my-auto">
        <button class="btn btn-primary" type="submit"> @Localizer["btnSave"] <i class="far fa-save"></i>  </button>
        <a asp-controller="GE_Countries" class="btn btn-primary" asp-action="Index">@Localizer["BackBtn"] <i class="fas fa-angle-double-left"></i></a>
        <!------print button go here---->
    </div>
</div>
