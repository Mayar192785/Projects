@model FinanceCore.DBModels.tblGE_Currencies
@using NonFactors.Mvc.Lookup
@using Global.Globalization;
@using Global.DBModels;
@using Global.Models;
@using Global.Services;
@using FinanceCore.DBModels;

@using Microsoft.Extensions.Localization;
@using Microsoft.AspNetCore.Mvc.Localization
@using Global.Helpers

@inject IViewLocalizer Localizer

@{
    ViewBag.Title = "GE_Currencies ..Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .btn {
        background-color: #094766;
        color: #fff;
        font-family: 'Times New Roman', Times, serif;
        font-size: 1rem
    }

    #nav-tab .nav-link {
        border-color: #094766;
        color: black;
        font-family: 'Times New Roman', Times, serif;
        font-size: 1rem;
    }

    .form-group.required .control-label:after {
        content: "*";
        color: red;
        font-size: 1.5rem;
        margin: 0 0.5rem;
    }
</style>

<div class="row mx-5 my-auto">
    <!-- /Start Tabs -->
    <div class="col-md-12">
        <nav>
            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                <button class="nav-link nav-link shadow shadow-bottom-0 active" id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#details" type="button" role="tab" aria-controls="nav-home" aria-selected="true">@Localizer["BasicDetails"]</button>
            </div>
        </nav>
        <div class="tab-content mx-auto my-auto py-auto">

            <div class="active tab-pane" id="details">
                <!-- /End Tabs -->
                <form asp-controller="GE_Currencies"
                      asp-action="Create"
                      asp-route-returnurl="@ViewBag.ReturnUrl"
                      asp-anti-forgery="false"
                      id="FullForm"
                      method="post">
                    <div class="box shadow mb-4">
                        <div class="form box-body py-3 px-3">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="container">
                            <div class="row row-cols-lg-2 justify-content-between align-items-center ">
                                <div ID="dvCurrencyCode" class="col">
                                    <div class="form-group has-feedback ">
                                        <label asp-for="CurrencyCode" class="control-label "></label>
                                        <input asp-for="CurrencyCode" asp-format="{0:N0}" class="form-control required w-50" value="1" type="text" min="0" step="1" autocomplete="off" disabled="disabled" />
                                        <span asp-validation-for="CurrencyCode" class="text-danger"></span>
                                    </div>
                                </div>
                                <div ID="dvCurrencyNameA" class="col">
                                    <div class="form-group has-feedback required">
                                        <label asp-for="CurrencyNameA" class="control-label "></label>
                                        <input asp-for="CurrencyNameA" class="form-control    required w-50 " />
                                        <span asp-validation-for="CurrencyNameA" class="text-danger"></span>
                                    </div>
                                </div>
                                <div ID="dvCurrencyNameE" class="col">
                                    <div class="form-group has-feedback required">
                                        <label asp-for="CurrencyNameE" class="control-label "></label>
                                        <input asp-for="CurrencyNameE" class="form-control w-50" />
                                        <span asp-validation-for="CurrencyNameE" class="text-danger"></span>
                                    </div>
                                </div>
                                <div ID="dvAbbreviation" class="col">
                                    <div class="form-group has-feedback required">
                                        <label asp-for="Abbreviation" class="control-label "></label>
                                        <input asp-for="Abbreviation" class="form-control w-50" />
                                        <span asp-validation-for="Abbreviation" class="text-danger"></span>
                                    </div>
                                </div>
                                <div ID="dvExctangeRate" class="col">
                                    <div class="form-group has-feedback required">
                                        <label asp-for="ExctangeRate" class="control-label "></label>
                                        <input asp-for="ExctangeRate" class="form-control w-50" value="1.0" type="text" min="0" step="0.01" autocomplete="off" />
                                        <span asp-validation-for="ExctangeRate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class=" form-group col-sm-12 btns my-3">
                                    <button class="btn btn-primary" type="submit"> @Localizer["btnSave"] <i class="far fa-save"></i>  </button>
                                    <a asp-controller="GE_Currencies" class="btn btn-primary" asp-action="Index">@Localizer["BackBtn"] <i class="fas fa-angle-double-left"></i></a>
                                    <!------print button go here---->
                                </div>

                            </div>
                        </div>
                    </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@*<YYYYYYYYYYYYYYYY Details go here>*@
