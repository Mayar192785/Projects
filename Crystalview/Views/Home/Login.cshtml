<html lang="en" dir="ltr">
<head>
<title>Crystal Soft</title>

<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta name="keywords" content="Slide Login Form template Responsive, Login form web template, Flat Pricing tables, Flat Drop downs Sign up Web Templates, Flat Web Templates, Login sign up Responsive web template, SmartPhone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />

	 <script>
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>

	<!-- Custom Theme files -->
	<link href="~/css/Login_style.css" rel="stylesheet" type="text/css" media="all" />
	<link href="~/css/font-awesome.min.css" rel="stylesheet" type="text/css" media="all" />
	<!-- //Custom Theme files -->

	<!-- web font -->
	<link href="//fonts.googleapis.com/css?family=Hind:300,400,500,600,700" rel="stylesheet">
	<!-- //web font -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
	<link href="https://getbootstrap.com/docs/5.2/assets/css/docs.css" rel="stylesheet">
	<!-- MDB -->
        <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.3.0/mdb.min.css" rel="stylesheet" />
</head>
<body>

<!-- main -->

	<div class="w3layouts-main">
		<div class="bg-layer">
			<nav class="navbar static-top ">
					<a class="nav-brand mx-4" href="/" style="color:white; font-size:1.2rem">
						<i class="fa fa-arrow-left" style="margin:0 8px"></i>
						@Localizer["Back"]
					</a>
					<div class="dropdown d-grid gap-3 d-md-flex justify-content-md-end p-3 mx-4">
						<a class="dropdown-toggle" href="#" id="Dropdown" role="button" data-mdb-toggle="dropdown" aria-expanded="false" style="color:white; margin-top:5px;  font-size:1.2rem;">
							<i id="chngFlg" class="flag-us flag" style="margin:0 8px"></i> English
						</a>
						<ul class="dropdown-menu" aria-labelledby="Dropdown">
							<li>
								<a id="en" class="dropdown-item" href="/Home/Login/?ui-culture=en-US" style="font-size:1rem;"><i class="flag-us flag"></i>English <i id="chk" class="fa fa-check text-success ms-2"></i></a>
							</li>
							<li><hr class="dropdown-divider" /></li>
							<li>
								<a id="ar" class="dropdown-item" href="/Home/Login/?ui-culture=ar-EG" style="font-size:1rem;" onclick="reloadP()"><i class="flag-eg flag"></i>Arabic (العربية)</a>
							</li>
						</ul>
					</div>
			</nav>
			<h1>@Localizer["Please Login"]</h1>
			<div class="header-main">
				<div class="main-icon">
					<span class="fa fa-diamond"></span>
				</div>
				<div class="header-left-bottom">
					<form asp-controller="Home" asp-action="MainPage" method="post">
						<div asp-validation-summary="All" class="text-danger" dis></div>
						<div class="icon1">
							<span class="fa fa-user"></span>
							<input type="text" placeholder="@Localizer["Username"]" />
							<span asp-validation-for="UserName" class="text-danger"></span>
						</div>
						<div class="icon1">
							<span class="fa fa-lock"></span>
							<input type="password" placeholder="@Localizer["Password"]" />
							<span asp-validation-for="Password" class="text-danger"></span>
						</div>
						<div class="login-check">
							 <label class="checkbox"><input type="checkbox" name="checkbox" checked=""><i> </i> @Localizer["Keep me logged in"]</label>
						</div>
						<div class="bottom">
							<button class="btn">@Localizer["Login"]</button>
						</div>
						<div class="links">
							<div class="clear"></div>
						</div>
					</form>	
				</div>
			</div>
		
			<!-- copyright -->
			<div class="copyright">
				<p>© 2023 Crystal Soft . All rights reserved </a></p>
			</div>
			<!-- //copyright --> 
		</div>
	</div>	
	<!-- //main -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
	<script src="https://cdn.startbootstrap.com/sb-forms-latest.js"></script>
	<!-- MDB -->
	<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.3.0/mdb.min.js"></script>
	<script src="~/js/site.js"></script>
</body>
</html>