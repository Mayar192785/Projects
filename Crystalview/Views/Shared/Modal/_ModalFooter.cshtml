@model Global.Models.ModalFooter

<div class="modal-footer">

    <span id="progress" class="text-center" style="display: none;">
        <img src="/images/ajax-loader.gif" alt="wiat" />
        Wait..
    </span>

    <button data-dismiss="modal" id="@Model.CancelButtonID" class="btn btn-default" type="button">@Model.CancelButtonText <i class="@Model.CancelButtonIcon"></i></button>
    @if (!Model.OnlyCancelButton)
    {
        <button class="btn submit" id="@Model.SubmitButtonID" type="submit" value="Done">
            @Model.SubmitButtonText  <i class="@Model.SubmitButtonIcon"></i>
        </button>
    }
</div>

 

    <script>
        
        document.getElementsByClassName('submit')[0].className = "@Model.SubmitButtonClass";
    </script>
 
